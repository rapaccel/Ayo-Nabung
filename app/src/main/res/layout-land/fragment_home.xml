<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/birunabung">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/img"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Halo!"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/homaNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muh Sumbul"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/rose"
                    android:layout_marginStart="470dp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="186dp"
                android:layout_height="118dp"
                android:src="@drawable/story_asset"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="311dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tabunganku"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:text="26 Oktober 2023"
                            android:layout_marginStart="75dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:padding="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp.8.999.000"
                            android:textColor="@color/birunabung"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            />
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="33dp"
                            android:src="@drawable/logo"
                            android:layout_marginStart="85dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="311dp"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Catatanku"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="10dp"
                            android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="26.5dp"
                            android:src="@drawable/yellow_dollar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Pengeluaran"
                            android:textColor="@color/red"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pengeluaran"
                            android:text="Rp.65.000"
                            android:textColor="@color/red"
                            android:layout_marginTop="3dp"
                            android:gravity="end"/>

                    </LinearLayout>
                    <View
                        android:layout_width="263dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/grey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="27.5dp"
                            android:src="@drawable/green_dollar"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Pemasukan"
                            android:textColor="@color/green"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pemasukan"
                            android:text="Rp.65.000"
                            android:textColor="@color/green"
                            android:layout_marginTop="3dp"
                            android:gravity="end"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/tambah_data"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:src="@drawable/baseline_add_circle_24"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>